@model IEnumerable<PRINGUP_Proj.Models.Izvjestaj>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Report including: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-secondary btn-sm"/>
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>      
        <th>
            @Html.ActionLink("Created by", "Index", new { sortOrder = ViewBag.UserSortParm })
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Posted)
        </td>      
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("View as PDF", "GeneratePDF", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })           
        </td>
    </tr>
}

</table>

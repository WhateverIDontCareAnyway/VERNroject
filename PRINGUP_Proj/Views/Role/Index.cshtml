@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h3>Available Roles For Application</h3>

@Html.ActionLink("Create Role", "Create", "Role")

<style type="text/css">
     .c {
        border: solid;
        border-color:lightgray;
        
    }
</style>

<table id="tbrole">
    <tr>
        <td class="c">
            Role Name
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="c">
                @item.Name
            </td>
        </tr>
    }
</table>